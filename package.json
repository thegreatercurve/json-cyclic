{
  "name": "json-cyclic",
  "description": "Small utility library to replace circular references in JavaScript with JSONPaths",
  "version": "0.0.2",
  "person": "John Flockton <hello@johnflockton.com>",
  "main": "dist/index.js",
  "scripts": {
    "prepare": "npm run build",
    "build": "./node_modules/.bin/microbundle",
    "dev": "./node_modules/.bin/microbundle watch",
    "format": "prettier --write \"./src/**/*.js\"",
    "format:check": "prettier --list-different \"./src/**/*.js\"",
    "lint": "eslint \"./src/**/*.js\"",
    "test": "jest --coverage"
  },
  "files": [
    "dist"
  ],
  "author": "John Flockton",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thegreatercurve/json-cyclic/issues"
  },
  "homepage": "https://github.com/thegreatercurve/json-cyclic#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thegreatercurve/json-cyclic.git"
  },
  "keywords": [
    "JSON",
    "circular JSON",
    "circular references",
    "cyclic JSON",
    "cyclic references"
  ],
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.7.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-plugin-prettier": "^3.0.1",
    "jest": "^24.8.0",
    "microbundle": "^0.11.0",
    "prettier": "^1.17.0"
  },
  "babel": {
    "presets": [
      "env"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/!(index).js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  }
}
